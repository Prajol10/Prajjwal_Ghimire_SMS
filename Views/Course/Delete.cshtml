@model Prajjwal_Ghimire_SMS.Models.Course
@{
    ViewData["Title"] = "Delete Course";
}

<div class="container mt-4">
    <h2>Delete Course</h2>
    <h3 class="text-danger">Are you sure you want to delete this?</h3>
    <hr />
    
    <dl class="row">
        <dt class="col-sm-3">Course Code</dt>
        <dd class="col-sm-9">@Model.Code</dd>
        
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>
        
        <dt class="col-sm-3">Credits</dt>
        <dd class="col-sm-9">@Model.Credits</dd>
    </dl>
    
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
