@model IEnumerable<Prajjwal_Ghimire_SMS.Models.Course>
@{
    ViewData["Title"] = "Courses";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Courses</h2>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-primary">Create New Course</a>
        }
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Course Code</th>
                <th>Name</th>
                <th>Credits</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.Code</td>
                    <td>@course.Name</td>
                    <td>@course.Credits</td>
                    <td>@course.Description</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@course.Id" class="btn btn-sm btn-info">Details</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@course.Id" class="btn btn-sm btn-danger">Delete</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
