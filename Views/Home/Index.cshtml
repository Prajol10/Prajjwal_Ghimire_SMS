@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Prajjwal Ghimire SMS</h1>
    <p class="lead">Student Management System</p>
</div>

<div class="row mt-5">
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body text-center">
                <h3>ğŸ“š Courses</h3>
                <p>Manage and view all available courses in the system.</p>
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Course" asp-action="Index" class="btn btn-primary">View Courses</a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Login to Access</a>
                }
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body text-center">
                <h3>ğŸ‘¨â€ğŸ“ Students</h3>
                <p>View and manage student information and profiles.</p>
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Student" asp-action="Index" class="btn btn-primary">View Students</a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Login to Access</a>
                }
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body text-center">
                <h3>ğŸ” Account</h3>
                <p>Login or register to access the system features.</p>
                @if (!User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Account" asp-action="Login" class="btn btn-success">Login</a>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-outline-success">Register</a>
                }
                else
                {
                    <p class="text-success mt-2">Welcome, @User.Identity.Name!</p>
                    @if (User.IsInRole("Admin"))
                    {
                        <span class="badge bg-success">Admin Access</span>
                    }
                    else
                    {
                        <span class="badge bg-info">Student Access</span>
                    }
                }
            </div>
        </div>
    </div>
</div>

